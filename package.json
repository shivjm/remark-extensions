{
  "name": "remark-extensions",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "pnpm run -r lint",
    "build": "pnpm build -r --parallel",
    "test": "pnpm test -r",
    "typedoc": "typedoc --entryPointStrategy packages --options typedoc.json packages/*"
  },
  "pnpm": {
    "overrides": {
      "conventional-changelog-conventionalcommits": "npm:@shivjm/conventional-changelog-conventionalcommits@4.6.1"
    }
  },
  "devDependencies": {
    "standard-version": "^9.5.0",
    "typedoc": "^0.25.13"
  }
}
